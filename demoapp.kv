#:kivy 1.0.6

<Carousel>:
    direction:"right"
    # canvas:
    #     Color:
    #         rgb: [1,0,1,0]
    #     Rectangle:
            
    #         size: root.size
    #         pos: root.pos
    FloatLayout:
        name:'main_screen'
                  
        MyAnchorLayout:
            id:anchorLogo
            anchor_x:"center"
            anchor_y:"center"
            on_touch_move:
                root.current='data_screen'
            LogoImage:
                id:logo
                source:"./logo.jpg"
                    
    FloatLayout:
        name:'data_screen'
        FloatLayout:
            Button:
                id:btn_scale
                text:"C° / F°"
                size_hint:(.1, .1)
                pos_hint:{'x':.45, 'y':.6}
                background_normal:"./black.png"
                on_release:app.changeUnit()
		
        GridLayout:
            pos: root.pos
            size: root.size
            cols: 2
            row:4
            spacing: 5
            padding: 5


            ##### 1 #####
            Label:
                text:"Umidity"
                text_size: self.size
                halign: 'center'
                valign: 'top'
                font_size:30
                padding:5,10
            ##### 2 #####
            Label:
                text:"Temperature"
                text_size: self.size
                halign: 'center'
                valign: 'top'
                font_size:30
                padding:5,10

            ##### 3 #####
            AnchorLayout:
                anchor_x:"center"
                anchor_y:"center"
                Knob:
                    id:knob_umidity
                    center:self.parent.center
                    size: 200, 200
                    step: 1
                    value:0
                    range:0,100
                    show_marker: True
                    knobimg_source: ""
                    knobimg_color: 1, 0, 0, 0
                    marker_img: "./libs/garden/garden.knob/img/bline.png"
                    markeroff_color: 0, 0, 0, 0
                    marker_inner_color: 0, 0, 0, 0
                    Label:
                        text: "{}".format(int(self.parent.value))
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y +40
                        font_size: 50
                        color: 1,1,1,1
                    Label:
                        text: "%"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y -40
                        font_size: 50
                        color: 1,1,1,1
            ##### 4 #####
            AnchorLayout:
                anchor_x:"center"
                anchor_y:"center"
                Knob:
                    id:knob_temperature
                    center:self.parent.center
                    size: 200, 200
                    step: 1
                    value:50
                    range:-50,50
                    show_marker: True
                    knobimg_source: ""
                    knobimg_color: 1, 0, 0, 0
                    marker_img: "./libs/garden/garden.knob/img/bline3.png"
                    markeroff_color: 0, 0, 0, 0
                    marker_inner_color: 0, 0, 0, 0
                    
                    Label:
                        id:lbl_unit_temp
                        text: "°C"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y +40
                        font_size: 50
                        color: 1,1,1,1
                    Label:
                        text: "°{}".format(int(self.parent.value))
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y -40
                        font_size: 50
                        color: 1,1,1,1
            ##### 5 #####
            GridLayout:
                pos: root.pos
                size: root.size
                cols: 3
                spacing: 10
                padding: 10
                Label:
                    text:"MAX %"
                    font_size:40
                    center:self.parent.center
                Label:
                    id:lbl_max_um
                    text:"80"
                    font_size:40
                    center:self.parent.center
                Button:
                    name:"max_um"
                    text:"Reset"
                    font_size:20
                    background_normal:"./black.png"
                    on_release:app.reset_mm(self)
            ##### 6 #####
            GridLayout:
                pos: root.pos
                size: root.size
                cols: 3
                spacing: 10
                padding: 10
                Label:
                    text:"MAX T°"
                    font_size:40
                    center:self.parent.center
                Label:
                    id:lbl_max_temp
                    text:"50"
                    font_size:40
                    center:self.parent.center
                Button:
                    name:"max_temp"
                    text:"Reset"
                    font_size:20
                    background_normal:"./black.png"
                    on_release:app.reset_mm(self)
            ##### 7 #####
            GridLayout:
                pos: root.pos
                size: root.size
                cols: 3
                spacing: 10
                padding: 10
                Label:
                    text:"MIN %"
                    font_size:40
                    center:self.parent.center
                Label:
                    id:lbl_min_um
                    text:"10"
                    font_size:40
                    center:self.parent.center
                Button:
                    name:"min_um"
                    text:"Reset"
                    font_size:20
                    background_normal:"./black.png"
                    on_release:app.reset_mm(self)
            ##### 8 #####
            GridLayout:
                pos: root.pos
                size: root.size
                cols: 3
                spacing: 10
                padding: 10
                Label:
                    text:"MIN T°"
                    font_size:40
                    center:self.parent.center
                Label:
                    id:lbl_min_temp
                    text:"10"
                    font_size:40
                    center:self.parent.center
                Button:
                    name:"min_temp"
                    background_normal:"./black.png"
                    text:"Reset"
                    font_size:20
                    on_release:app.reset_mm(self)
            



                    
            

